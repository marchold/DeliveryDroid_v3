        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="button_icon_image">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
    </style>
    <style name="button_icon_container">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">135dp</item>
    </style>
    <style name="droid_tool_icon_container">
