        <item name="android:layout_height">55dp</item>
        <item name="android:background">#0000</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">left|center_vertical</item>


    </style>

    <style name="slide_out_menu_button_land" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">#0000</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="details_view_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="details_view_data_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/chea_header_bar_green</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_view_header_data_layout">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="dialog_datepicker_style">
        <item name="android:calendarViewShown">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="bottom_toolbar_image_button">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="bottom_toolbar_image_container">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
