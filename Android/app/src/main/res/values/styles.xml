<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppActionBarTheme" parent="android:Theme.Holo">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="calendarViewStyle">@style/Widget.Holo.CalendarView</item>
        <item name="datePickerStyle">@style/Widget.Holo.DatePicker</item>

        <item name="android:statusBarColor">@color/chea_action_bar_bkgd</item>
    </style>

    <!-- Application theme. -->
    <style name="ActionBarTheme" parent="Theme.AppCompat">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="calendarViewStyle">@style/Widget.Holo.CalendarView</item>
        <item name="datePickerStyle">@style/Widget.Holo.DatePicker</item>


        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBarTheme.OverFlow</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>

        <item name="@android:attr/actionBarTabTextStyle">@style/TabStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/icon</item>
        <item name="android:statusBarColor">@color/chea_action_bar_bkgd</item>
        <item name="android:backgroundStacked">@color/chea_action_bar_bkgd</item>
        <item name="backgroundStacked">@color/chea_action_bar_bkgd</item>
        <item name="actionBarItemBackground">@color/chea_action_bar_bkgd</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="calendarViewStyle">@style/Widget.Holo.CalendarView</item>
        <item name="datePickerStyle">@style/Widget.Holo.DatePicker</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBarTheme.OverFlow</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>

        <item name="@android:attr/actionBarTabTextStyle">@style/TabStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/icon</item>
        <item name="android:statusBarColor">@color/chea_action_bar_bkgd</item>
        <item name="android:backgroundStacked">@color/chea_action_bar_bkgd</item>
    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/chea_action_bar_bkgd</item>
        <item name="android:backgroundStacked">@color/chea_action_bar_bkgd</item>
        <item name="android:statusBarColor">@color/chea_action_bar_bkgd</item>

    </style>


    <style name="TabStyle" parent="android:Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textColor">#000</item>
    </style>


    <style name="ActionBarTheme.OverFlow">
        <item name="android:src">@drawable/icon_three_dots</item>
    </style>

    <style name="ListView">
        <item name="android:background">#000</item>
        <item name="android:cacheColorHint">#000</item>
    </style>

    <style name="action_bar_menu_layout_item">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/transparent_button</item>
    </style>

    <style name="action_bar_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="action_bar_menu_selection_underline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@color/android_blue_underline</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="action_bar_primary_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="home_screen_extra_button">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:background">#0000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/android_blue</item>
    </style>

    <style name="tab_bar_button_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:padding">3dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="action_bar_action_icon">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/transparent_button</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="home_screen_extra_button_landscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#0000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/chea_list_light_text</item>
    </style>

    <style name="action_bar_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:background">@color/chea_action_bar_bkgd</item>
    </style>

    <style name="action_bar_underline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/action_bar_underline_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/imageView2</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/android_blue_underline</item>
    </style>

    <style name="action_bar_button">
        <item name="android:background">@drawable/left_divider</item>
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textSize">21sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="bank_drop_total_label">
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:textSize">@dimen/smallLabel</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="bank_drop_total_value">
        <item name="android:inputType">none</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textSize">@dimen/basicInputText</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="Animations"/>

    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.GrowFromTop">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Theme.Dialog.Alert" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- item name="android:windowTitleStyle">@android:style/DialogWindowTitle</item -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="Widget.DatePicker">

        <!-- item name="android:layout">@android:layout/date_picker</item -->
        <item name="dp_calendarViewShown">false</item>
    </style>

    <style name="Widget.Holo.DatePicker" parent="Widget.DatePicker">
        <item name="dp_internalLayout">@layout/date_picker_holo</item>
        <item name="dp_calendarViewShown">true</item>
    </style>

    <style name="Widget.Holo.Light.DatePicker" parent="Widget.Holo.DatePicker"></style>

    <style name="Widget.CalendarView">
        <item name="cv_showWeekNumber">true</item>
        <item name="cv_firstDayOfWeek">1</item>
        <item name="cv_minDate">01/01/1900</item>
        <item name="cv_maxDate">12/31/2100</item>
        <item name="cv_shownWeekCount">6</item>
        <item name="cv_selectedWeekBackgroundColor">#330099FF</item>
        <item name="cv_focusedMonthDateColor">#FFFFFFFF</item>
        <item name="cv_unfocusedMonthDateColor">#66FFFFFF</item>
        <item name="cv_weekNumberColor">#33FFFFFF</item>
        <item name="cv_weekSeparatorLineColor">#19FFFFFF</item>
        <item name="cv_selectedDateVerticalBar">@drawable/day_picker_week_view_dayline_holo</item>
        <item name="cv_weekDayTextAppearance">@style/TextAppearance.Small.CalendarViewWeekDayView</item>
        <item name="cv_dateTextAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Widget.Holo.CalendarView" parent="Widget.CalendarView">
        <item name="cv_selectedWeekBackgroundColor">#330099FF</item>
        <item name="cv_focusedMonthDateColor">#FFFFFFFF</item>
        <item name="cv_unfocusedMonthDateColor">#66FFFFFF</item>
        <item name="cv_weekNumberColor">#33FFFFFF</item>
        <item name="cv_weekSeparatorLineColor">#19FFFFFF</item>
        <item name="cv_selectedDateVerticalBar">@drawable/day_picker_week_view_dayline_holo</item>
        <item name="cv_weekDayTextAppearance">@style/TextAppearance.Holo.CalendarViewWeekDayView</item>
        <item name="cv_dividerHorizontal">@drawable/list_divider_holo_dark</item>
    </style>

    <style name="Widget.Holo.Light.CalendarView" parent="Widget.CalendarView">
        <item name="cv_selectedWeekBackgroundColor">#330066ff</item>
        <item name="cv_focusedMonthDateColor">#FF000000</item>
        <item name="cv_unfocusedMonthDateColor">#7F08002B</item>
        <item name="cv_weekNumberColor">#7F080021</item>
        <item name="cv_weekSeparatorLineColor">#7F08002A</item>
        <item name="cv_weekDayTextAppearance">@style/TextAppearance.Holo.Light.CalendarViewWeekDayView</item>
        <item name="cv_dividerHorizontal">@drawable/list_divider_holo_light</item>
    </style>

    <style name="TextAppearance.Small.CalendarViewWeekDayView" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Holo.CalendarViewWeekDayView" parent="TextAppearance.Small.CalendarViewWeekDayView">
        <item name="android:textColor">#505050</item>
    </style>

    <style name="TextAppearance.Holo.Light.CalendarViewWeekDayView"
           parent="TextAppearance.Small.CalendarViewWeekDayView"></style>

    <style name="slide_out_menu_button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">#0000</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="slide_out_menu_button_land">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:background">#0000</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="details_view_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="details_view_data_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/chea_header_bar_green</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_view_header_data_layout">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="dialog_datepicker_style">
        <item name="android:calendarViewShown">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="bottom_toolbar_image_button">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="bottom_toolbar_image_container">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="bottom_toolbar_image_label">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="bottom_buttons_out_the_door">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/grey_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MeterNumberPickerStyle">
        <item name="mnp_min">0</item>
        <item name="mnp_max">9</item>
        <item name="mnp_textColor">@android:color/white</item>
        <item name="mnp_textSize">50sp</item>
        <item name="mnp_paddingHorizontal">5dp</item>
        <item name="mnp_paddingVertical">25dp</item>
    </style>

    <style name="MeterViewStyle">
        <item name="mv_firstColor">@android:color/transparent</item>
        <item name="mv_numberOfFirst">6</item>
        <item name="mv_numberOfSecond">0</item>
        <item name="mv_pickerStyle">@style/MeterNumberPickerStyle</item>
        <item name="mv_secondColor">@android:color/transparent</item>
    </style>

</resources>