<resources xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="calendarViewStyle">@style/Widget.Holo.CalendarView</item>
        <item name="datePickerStyle">@style/Widget.Holo.DatePicker</item>

        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="buttonBarButtonStyle">@style/alertButtonStyle</item>

        <item name="android:statusBarColor">@color/chea_action_bar_bkgd</item>
        <item name="colorAccent">@color/android_blue</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/chea_action_bar_bkgd</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>

       <!-- <item name="@android:attr/actionBarTabTextStyle">@style/TabStyle</item>  -->
        <item name="android:homeAsUpIndicator">@drawable/icon</item>

        <item name="android:backgroundStacked">@color/chea_action_bar_bkgd</item>
        <item name="backgroundStacked">@color/chea_action_bar_bkgd</item>
        <item name="actionBarItemBackground">@color/chea_action_bar_bkgd</item>
        <item name="buttonBarPositiveButtonStyle">@style/myButtonBarPositiveButtonStyle</item>

        <item name="preferenceTheme">@style/myPreferenceTheme</item>
    <!--    <item name="android:statusBarColor">@color/chea_action_bar_bkgd</item> -->

   </style>

   <style name="myPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
       <item name="android:layout">@layout/fragment_your_preferences</item>
   </style>

   <style name="myButtonBarPositiveButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
       <item name="android:background">@color/transparent</item>
   </style>

   <style name="alertButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">

   </style>

   <style name="myDialog" parent="Theme.AppCompat.Dialog">
       <item name="android:windowNoTitle">true</item>

   </style>



   <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundStacked">@color/chea_action_bar_bkgd</item>
        <item name="android:background">@drawable/underline_blue</item>
        <item name="android:actionBarItemBackground">@color/chea_action_bar_bkgd</item>
        <item name="actionBarItemBackground">@color/chea_action_bar_bkgd</item>
    </style>


    <style name="TabStyle" parent="android:Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textColor">#000</item>
    </style>


    <style name="AppTheme.OverFlow">
        <item name="android:src">@drawable/icon_three_dots</item>
    </style>

    <style name="ListView">
        <item name="android:background">#000</item>
        <item name="android:cacheColorHint">#000</item>
    </style>

    <style name="action_bar_menu_layout_item">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/transparent_button</item>
    </style>

    <style name="action_bar_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="action_bar_menu_selection_underline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@color/android_blue_underline</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="action_bar_primary_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="home_screen_extra_button">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:background">#0000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/android_blue</item>
    </style>

    <style name="tab_bar_button_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:padding">3dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="action_bar_action_icon">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/transparent_button</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="home_screen_extra_button_landscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#0000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/chea_list_light_text</item>
    </style>

    <style name="action_bar_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:background">@color/chea_action_bar_bkgd</item>
    </style>

    <style name="action_bar_underline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/action_bar_underline_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/imageView2</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/android_blue_underline</item>
    </style>

    <style name="action_bar_button" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/left_divider</item>
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textSize">21sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="bank_drop_total_label">
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:textSize">@dimen/smallLabel</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="bank_drop_total_value">
        <item name="android:inputType">none</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textSize">@dimen/basicInputText</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="Animations"/>

    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.GrowFromTop">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

