<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noListAltView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/border_bkgd"
    android:gravity="fill"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/SpeechBubbleHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_marginBottom="-15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="-30dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="@drawable/speech_bubble_7"
        android:text="@string/set_store_address_help_bubble"
        android:textColor="@color/black" />


    <catglo.com.widgets.RowLayout
        android:id="@+id/rowLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/orderSummaryClickable"
            style="@style/slide_out_menu_button_land"
            android:drawableTop="@drawable/icon_summery"
            android:text="@string/order_summary" />

        <Button
            android:id="@+id/menuGpsNotesClickListener"
            style="@style/home_screen_extra_button"
            android:drawableTop="@drawable/gps_notes"
            android:text="@string/Gps_Notes" />

        <Button
            android:id="@+id/menuShiftClickListener"
            style="@style/home_screen_extra_button"
            android:drawableTop="@drawable/shift"
            android:text="@string/Shift" />

        <Button
            android:id="@+id/menuSearchClickListener"
            style="@style/home_screen_extra_button"
            android:drawableTop="@drawable/search"
            android:text="@string/Search_Notes_Or_Addresses" />

        <Button
            android:id="@+id/navToStore"
            style="@style/home_screen_extra_button"
            android:drawableTop="@drawable/navigate"
            android:text="@string/Nav_To_Store" />

        <Button
            android:id="@+id/clockOutAndBackup"
            style="@style/home_screen_extra_button"
            android:drawableTop="@drawable/stopwatch_money"
            android:text="@string/Time_clock" />

        <Button
            android:id="@+id/settings"
            style="@style/home_screen_extra_button"
            android:drawableTop="@drawable/settings"
            android:text="@string/settings" />

        <Button
            android:id="@+id/callstoreButton"
            style="@style/home_screen_extra_button"
            android:drawableTop="@drawable/text_call"
            android:text="@string/call_store" />

        <Button
            android:id="@+id/smsStoreButton"
            style="@style/home_screen_extra_button"
            android:drawableTop="@drawable/text_message"
            android:text="@string/sms_store" />

        <Button
            android:id="@+id/makeADropButton"
            style="@style/home_screen_extra_button"
            android:drawableLeft="@drawable/error_icon"
            android:drawableTop="@drawable/icon_drops"
            android:text="@string/Make_a_Drop" />

    </catglo.com.widgets.RowLayout>


</RelativeLayout>