<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="catglo.com.deliverydroid.homeScreen.ChooseDownloadActivity">

    <androidx.appcompat.widget.Toolbar
            android:background="@drawable/underline_blue"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:theme="@style/MyActionBar"
    ><RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/chea_action_bar_bkgd">

    </RelativeLayout></androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



</LinearLayout>
